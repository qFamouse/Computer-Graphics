<Page x:Class="ComputerGraphics.Settings.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerGraphics.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="170"
      Background="White"
      Title="Page1">
    <StackPanel>
        <GroupBox Header="Mosaic Size">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.54*"/>
                    <ColumnDefinition Width="0.04*"/>
                    <ColumnDefinition Width="0.54*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0"></TextBox>
                <TextBlock Grid.Column="1" VerticalAlignment="Center">x</TextBlock>
                <TextBox Grid.Column="2"></TextBox>
            </Grid>
        </GroupBox>
    </StackPanel>
</Page>
