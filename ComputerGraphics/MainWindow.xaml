<Window x:Class="ComputerGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGraphics"
        xmlns:viewModels="clr-namespace:ComputerGraphics.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Width="25">
            <Menu HorizontalAlignment="Center">
                <MenuItem>
                    <MenuItem.Header>T</MenuItem.Header>
                    <MenuItem Header="#1">
                        <MenuItem Header="Mosaic" Command="{Binding MosaicCommand}"></MenuItem>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" DockPanel.Dock="Right" Width="170" Content="{Binding CurrentSettings, Mode=TwoWay}"></Frame>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="AppCanvas" HorizontalAlignment="Left" Width="1000" ClipToBounds="True">
                <Rectangle Canvas.Left="0" Fill="Red" Width="10" Height="10"/>
                <Rectangle Canvas.Left="10" Fill="Azure" Width="10" Height="10"/>
                <Rectangle Canvas.Left="20" Fill="Black" Width="10" Height="10"/>
                <Rectangle Canvas.Left="30" Fill="Cornsilk" Width="10" Height="10"/>
                <Rectangle Canvas.Left="40" Fill="DarkCyan" Width="10" Height="10"/>
                <Rectangle Canvas.Left="740" Fill="Red" Width="10" Height="10"/>
            </Canvas>
        </ScrollViewer>
    </DockPanel>
</Window>
