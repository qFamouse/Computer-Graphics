<Page x:Class="ComputerGraphics.Pages.OpenSave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerGraphics.Pages"
      xmlns:viewModel="clr-namespace:ComputerGraphics.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="170"
      Title="Mosaic"
      Background="White">
    <Page.DataContext>
        <viewModel:OpenSaveViewModel/>
    </Page.DataContext>
    <StackPanel Margin="5">
        <Button Command="{Binding OpenCommand}" Margin="0 0 0 10">Open</Button>
        <Button Command="{Binding SaveCommand}">Save</Button>
    </StackPanel>
</Page>
